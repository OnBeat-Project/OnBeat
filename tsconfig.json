{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
    "resolveJsonModule": true,
		"tsBuildInfoFile": "dist/.tsbuildinfo",
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "#lib/*": ["./lib/*"],
      "#database/*": ["./lib/database/*"]
    }
	},
	"include": ["src", "src/languages/**/*.json"]
}
